# =====================================================
# LimeAura Environment Variables
#
# Copy this file to .env.local for local development.
# Do not commit .env.local to version control.
# =====================================================

# --- Core Configuration ---
# NODE_ENV: 'development', 'production', or 'test'
NODE_ENV=development

# --- Frontend ---
# URL where the web app is running
APP_URL=http://localhost:3000

# --- Backend ---
# URL where the API server is running
API_URL=http://localhost:4000
# Port for the API server
PORT=4000

# --- Database (PostgreSQL 16) ---
# Connection string for the database
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/limeaura

# --- Cache (Redis 7.2) ---
# Connection string for Redis
REDIS_URL=redis://localhost:6379

# --- Authentication ---
# Secret key for signing JWTs (use a long, random string)
JWT_SECRET=your-super-secret-jwt-key-please-change-me
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# --- External Services ---
# (Add keys as needed, per Project_Architecture_Document.md)
# SENTRY_DSN=
# OPENAI_API_KEY=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# --- Feature Flags ---
# (Per Project_Architecture_Document.md)
ENABLE_AI_FEATURES=true
ENABLE_OFFLINE_MODE=true
ENABLE_WEBSOCKET=true
